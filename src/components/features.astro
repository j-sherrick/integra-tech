---
// @ts-ignore
import { Icon } from "astro-icon";
import { Image } from "@astrojs/image/components";

// Import SVG icons
import computerRepair from "assets/icons/computerRepair.svg";
import dataCenter from "assets/icons/networkStack.svg";
import signage from "assets/icons/digitalSignage.svg";
import networkStack from "assets/icons/networkSecure.svg";
import networkSecure from "assets/icons/networkSecure.svg";
import pos from "assets/icons/pos.svg";
import remote from "assets/icons/remote.svg";

const iconPath = "assets/icons/";

const features = [
  {
    title: "Digital Signage",
    description:
      "We provide a comprehensive range of service options, including equipment installation, data cabling, network configuration, provisioning, and content creation services.",
    icon: signage,
  },
  {
    title: "Point-Of-Sale",
    description:
      "A properly installed and well maintained POS system is a crucial component of your day-to-day operations. We offer staging and installation services, maintenance and repair, upgrades, site surveys, end-user training, and decommssioning.",
    icon: pos,
  },
  {
    title: "Data Center Support",
    description:
      "Looking for colocation expertise? Our CompTIA certified technicians bring the highest quality services in rack mounting hardware, cabling, upgrading servers, relocating, and removing equipment.",
    icon: dataCenter,
  },
  {
    title: "Network Solutions",
    description:
      "We install, de-install, upgrade, troubleshoot, and repair all manner of enterprise network infrastructure, peripherals, cabling and connections.",
    icon: networkStack,
  },
  {
    title: "Computer Repair",
    description:
      "Our certified and experienced technicians can help with any computer repair or service need. From broken screens and battery replacements to custom builds and performance upgrades, we give you peace of mind and quick turnaround.",
    icon: computerRepair,
  },
  {
    title: "Helpdesk & Remote Support",
    description:
      "We offer stress-free help desk services that save you time, boost productivity, and improve end-user satisfaction. Our help desk support services are highly flexible, supplimenting your manpower needs and reducing downtime during periods of high volume or short staffing.",
    icon: remote,
  },
];
---
<div class="my-12">
  <div class="mt-16 md:mt-0">
    <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
      Here's what we offer
    </h2>
    <p class="text-lg mt-4 text-slate-600">
      Our comprehensive suite of services stands ready to transform your tech challenges into opportunities. Whether it's troubleshooting, installing, upgrading or optimizing, we've got you covered.
    </p>
  </div>
  
  <div class="grid sm:grid-cols-2 mt-16 gap-16">
    {
      features.map((item) => (
        <div class="flex gap-4 items-start">
          <div class="mt-1 w-16 h-16 shrink-0">
            <Image 
              src={item.icon}
              alt={item.title}
            />
          </div>
          <div>
            <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
            <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
