---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/integra-hero-bottomless.png";
import Link from "@components/ui/Link.astro";
import { Icon } from "astro-icon";
---

<main class=" hero grid lg:grid-cols-2 place-items-center py-4 mt-10 lg:mt-16">
  <picture class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Laptop being repaired by a crew of miniature repairment"
      widths={[200, 400, 600]}
      sizes="(max-width: 700px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </picture>
  <div>
    <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter">
      Expert Help for Every Hurdle
    </h1>
    <p class="text-md lg:text-lg mt-5 text-slate-600 max-w-xl">
      From problems to progress, we engineer success. With Integra Tech Support, you're not just getting support â€“ you're gaining the tools to turn tech hurdles into stepping stones.
    </p>
    <div class="mt-8 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="/contact"
        class="flex gap-1 items-center justify-center">

        Contact Us Now
      </Link>
    </div>
  </div>
</main>
