---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-2.5",
  md: "px-4 py-2",
};

const styles = {
  outline: "bg-white border-2 border-slate-600 hover:bg-gray-100 text-slate-600 font-semibold rounded-lg",
  primary: "bg-itgreen-400 text-slate-600 font-semibold hover:bg-itgreen-300 border-2 border-slate-600 rounded-lg",
  inverted: "bg-white text-slate-600 hover:bg-gray-300 font-semibold rounded-lg",
  muted: "bg-gray-100 hover:bg-gray-200",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
