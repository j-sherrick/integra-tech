---
import ContactForm from "@components/ContactForm.astro";
---

<section class="py-4 mt-4 lg:mt-10">
    <div class="grid md:grid-cols-2 gap-10 md:gap-14">

        <!----- ROW 01 COL 01 ----->
        <div class="flex flex-col lg:items-center gap-10 items-start">
            <div class="heading border-l-4 border-itblue-400 pl-4">
                <h2 class="text-lg lg:text-xl font-semibold text-itblue-400 lg:tracking-tight">
                    Who We Are
                </h2>
                <p class="subheading text-xl md:text-3xl font-light">
                    Chicagoland's premiere IT Support company, providing exceptional tech solutions tailored to your needs.
                </p>        
            </div>
            <div class="benefits mt-4 ml-10 lg:ml-8 text-2xl flex flex-col lg:flex-row justify-center items-center gap-4 lg:gap-12 font-light lg:text-3xl">
                <ul class="list-image-[url(/assets/img/check-fat-duotone.svg)]">
                    <li>Reliable</li>
                    <li>Professional</li>
                    <li>Flexible</li>
                </ul>
                <ul class="list-image-[url(/assets/img/check-fat-duotone.svg)]">
                    <li>Affordable</li>
                    <li>Accountable</li>
                    <li>Qualified</li>
                </ul>
            </div>
        </div>

        <!----- ROW 01 COL 02 ----->
        <div class="contactform px-4">
            <h2 class="text-2xl lg:text-3xl lg:tracking-tight mb-4">
                Need Help on a Project? Reach Out to Us!
            </h2>
            <p class="mb-5 text-lg">
                Integra Tech Support of the Greater Chicagoland Area provides outsourced technical solutions for any sized business.
            </p>
            <ContactForm />
        </div>
    </div>
  </section>

  <style>
    .subheading {
        line-height: 3rem;
    }

    .benefits li {
        margin-bottom: 1.125rem;
        letter-spacing: 0.2rem;
    }

    .benefits li:last-child {
        margin-bottom: 0;
    }
  </style>